<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:context=".ui.account.account.AccountFragment"
>

    <cockatoo.enjizen.income.custom.view.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account"
            app:showBackButton="true"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolBar"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_margin_padding_large"
            android:paddingEnd="@dimen/default_margin_padding_large"
            android:layout_above="@+id/addAccount"
    >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/accountRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_account_list"
        />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addAccount"
            style="@style/IncomeButton.default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_account"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/default_margin_padding_large"
            android:layout_marginTop="@dimen/default_margin_padding_large"
            android:layout_marginEnd="@dimen/default_margin_padding_large"
            android:layout_marginBottom="@dimen/default_margin_padding_large"
    />

</RelativeLayout>