<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@color/light_blue_300"
                android:fitsSystemWindows="true"
                tools:context=".ui.password.create.SetPasswordFragment">

    <cockatoo.enjizen.income.custom.view.Toolbar
            android:id="@+id/passwordToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_password"
            app:showBackButton="true"
    />

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:fillViewport="true"
                                           android:layout_below="@id/passwordToolBar"
    >
        <include android:id="@+id/view_pass" layout="@layout/view_keyboard_password"/>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>