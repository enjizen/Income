<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_padding_16dp"
    >

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnClose"
                android:layout_width="@dimen/default_margin_padding_32dp"
                android:layout_height="@dimen/default_margin_padding_32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_close_white_24dp"
                android:visibility="gone"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/default_margin_padding_32dp"
                android:layout_height="@dimen/default_margin_padding_32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:visibility="gone"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:freezesText="true"
                android:textColor="@android:color/white"
                tools:text="@string/add_account" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnRight"
                android:layout_width="@dimen/default_margin_padding_32dp"
                android:layout_height="@dimen/default_margin_padding_32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
        />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
